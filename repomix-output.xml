};

// Logique de Priorit√© bas√©e sur le graphique "P√©riodes Sensibles"
const getPriorities = (category: string) => {
  const cat = category.replace("U", "");
  const age = cat === "Senior" ? 20 : parseInt(cat);

  // 9-13 ANS : √Çge d'Or de la Motricit√© & Vitesse
  if (age <= 13) {
    return {
      priority: ["Coordination", "Vitesse", "Vivacit√©", "Souplesse"],
      secondary: ["Endurance A√©robie"],
      other: ["Force", "Endurance Puissance", "Pr√©vention"]
    };
  }
  
  // 13-16 ANS : Pic de Croissance (A√©robie & Fragilit√©)
  if (age > 13 && age <= 16) {
    return {
      priority: ["Endurance A√©robie", "Souplesse", "Pr√©vention"], // A√©robie monte, Souplesse critique (os > muscle)
      secondary: ["Vitesse", "Coordination", "Vivacit√©"], // Maintenance car perte de rep√®res corporels
      other: ["Force", "Endurance Puissance"] // Attention danger charges lourdes
    };
  }

  // 16-20+ ANS : Adulte (Force & Puissance)
  return {
    priority: ["Force", "Endurance Puissance", "Vitesse"],
    secondary: ["Vivacit√©", "Pr√©vention", "Endurance A√©robie"],
    other: ["Coordination", "Souplesse"]
  };
};

const LOADING_MESSAGES = [
  "Analyse de l'√¢ge biologique et des fen√™tres de d√©veloppement...",
  "S√©lection des ateliers physiques adapt√©s...",
  "Calibrage des temps de repos et d'effort...",
