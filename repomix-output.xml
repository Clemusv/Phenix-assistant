  const [params, setParams] = useState<SessionParams>({
    category: 'Senior',
    gender: 'M',
    level: 'D1',
    focusMode: 'dominance',
    dominance: 'Endurance Puissance', // Sera mis √† jour dynamiquement
    problemDescription: '',
    cycleMoment: 'Saison',
    playerCount: 18,
    references: 'Une saison de pr√©paration physique en football, De l\'entra√Ænement √† la performance, FIFA 11+',
    sessionsPerWeek: 2,
